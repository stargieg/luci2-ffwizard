#!/bin/sh

. /lib/functions.sh
. /usr/share/libubox/jshn.sh

log_ffwizard() {
	logger -s -t ffwizard $@
}

wdir="/etc/ffwizard.d"
[ -d $wdir ] || return 0
files="$(ls $wdir | sort)"
[ -z "$files" ] && return 0
for file in $files; do
	log_ffwizard "procesing $file"
	. "$wdir/$file"
done

ubus call uci "reload_config"
